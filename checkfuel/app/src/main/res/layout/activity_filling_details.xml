<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FillingDetails"
    android:background="@drawable/add_fuel">

    <TextView
        android:id="@+id/fuel_add_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_tile"
        android:text="Add"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="@+id/availability"
        app:layout_constraintStart_toStartOf="@+id/availability"
        app:layout_constraintTop_toBottomOf="@+id/availability" />


    <Spinner
        android:id="@+id/Fs_Fd_Name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:ems="10"
        android:hint="  Enter Fuel Name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/availability"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
        android:ems="10"
        android:hint="  Enter Fuel Name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Fs_Fd_Price"
        app:layout_constraintStart_toStartOf="@+id/Fs_Fd_Price"
        app:layout_constraintTop_toBottomOf="@+id/Fs_Fd_Price" />

    <EditText
        android:id="@+id/Fs_Fd_Price"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_price_change_24"
        android:ems="10"
        android:hint="    Enter Fuel Price(per liter)"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Fs_Fd_Name"
        app:layout_constraintStart_toStartOf="@+id/Fs_Fd_Name"
        app:layout_constraintTop_toBottomOf="@+id/Fs_Fd_Name" />


</androidx.constraintlayout.widget.ConstraintLayout>